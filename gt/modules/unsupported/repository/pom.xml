  <groupId>org.geotools</groupId>
  <artifactId>repository</artifactId>
  <packaging>jar</packaging>
  <name>Repository</name>

  <description>
  A repository implementation used to manage GeoResources. The focus is on maintaining a single DataStore
  or GridCoverage reader for each service. This work was origionally ported from the uDig catalog into
  the main geotools library.
  </description>

  <licenses>
    <license>
      <name>Lesser General Public License (LGPL)</name>
      <url>http://www.gnu.org/copyleft/lesser.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <developers>
  	<developer>
  		<id>jive</id>
  		<name>Jody Garnett</name>
  		<roles>
  			<role>Module Maintainer</role>
  		</roles>
  		<organization>Refractions Research Inc</organization>
  		<organizationUrl>http://www.refractions.net/</organizationUrl>
  		<email>jgarnett@refractions.com</email>
  		<timezone>PST</timezone>
        </developer>
  </developers>

  <dependencies>
    <dependency>
      <groupId>org.geotools</groupId>
      <artifactId>main</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.geotools</groupId>
      <artifactId>postgis</artifactId>
      <version>${project.version}</version>
    </dependency>    
    <dependency>
      <groupId>org.geotools</groupId>
      <artifactId>wms</artifactId>
      <version>${project.version}</version>
    </dependency>    
    <dependency>
      <groupId>org.geotools</groupId>
      <artifactId>wfs</artifactId>
      <version>${project.version}</version>
    </dependency>   
    <dependency>
      <groupId>org.geotools</groupId>
      <artifactId>render</artifactId>
      <version>${project.version}</version>
    </dependency>    
    <dependency>
      <groupId>org.geotools</groupId>
      <artifactId>shapefile</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.geotools</groupId>
      <artifactId>property</artifactId>
      <version>${project.version}</version>
    </dependency>
    <!-- Test dependencies -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <!-- =========================================================== -->
  <!--     Build Configuration                                     -->
  <!-- =========================================================== -->
  <build>
    <plugins>
      <!-- ====    Code Formatting  ============================== -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jalopy-maven-plugin</artifactId>
        <version>1.0-SNAPSHOT</version>
        <configuration>
            <convention>resources/jalopy-geotools.xml</convention>
        </configuration>
        <executions>
          <execution>
            <goals>
              <!-- <goal>format</goal> -->
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
