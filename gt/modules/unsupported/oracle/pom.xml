  <profiles>
    <!-- If you have access to the real driver you can rebuild     -->
    <!-- this geotools plugin with that driver to get a working    -->
    <!-- plugin.                                                   -->
    <!--                                                           -->
    <!-- To use for real:                                          -->
    <!--   download the ojdbc14.jar driver from oracle             -->
    <!--   copy ojdbc14.jar to                                     -->
    <!--      ~/.m2/repository/oracle/jars/ojdbc/14/ojdbc-14.jar   -->
    <!--                                                           -->
    <!--   And set the "oracle.jdbc" property to "true"            -->
    <!--   your ~/.m2/settings.xml file.                           -->
    <!--                                                           -->
    <!--   During that build, the test cases will try and connect  -->
    <!--   to an oracle server on localhost; alternatively, an     -->
    <!--   alternative server can be indicated in a XXX.properties -->
    <!--   file.                                                   -->
    <profile>
        <id>oracle.jdbc-true</id>
        <activation>
           <property>
              <name>oracle.jdbc</name>
           </property>           
        </activation>
        <dependencies>
          <dependency>
            <artifactId>ojdbc14</artifactId>
            <groupId>com.oracle</groupId>
            <!-- version specified in root pom -->
          </dependency>          
          <dependency>
            <artifactId>sdoapi</artifactId>
            <groupId>com.oracle</groupId>
            <!-- The version number is specified in the parent POM. -->
          </dependency>          
        </dependencies>          
    </profile>
    
    <!-- By default, the build downloads and uses a fake jar full  -->
    <!-- of "Mock Objects" so you we can compile the plugin even   -->
    <!-- without downloading the real thing from oracle.           -->
    <profile>
        <id>oracle.jdbc-false</id>
        <activation>
           <property>
              <name>!oracle.jdbc</name>
           </property>
        </activation>
        <dependencies>
          <dependency>
            <groupId>com.oracle</groupId>
            <artifactId>dummy_spatial</artifactId>
            <version>8.1.8</version>         
            <scope>provided</scope>
          </dependency>        
        </dependencies>                  
        <properties>
           <maven.test.skip>true</maven.test.skip>
        </properties>
    </profile>
  </profiles>
  
