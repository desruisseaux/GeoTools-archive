<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.geotools</groupId>
    <artifactId>gt2-unsupported</artifactId>
    <version>2.5-SNAPSHOT</version>
  </parent>

  <groupId>org.geotools</groupId>
  <artifactId>ogc</artifactId>
  <packaging>pom</packaging>

  <name>OGC Web Service Models</name>
  <url>http://maven.geotools.fr/reports/modules/unsupported/ogc</url>

  <scm>
    <connection>
      scm:svn:http://svn.geotools.org/geotools/trunk/gt/modules/unsupported/ogc
    </connection>
    <url>http://svn.geotools.org/geotools/trunk/gt/modules/unsupported/ogc</url>
  </scm>

  <description>Collection of EMF models for OGC Web Service scheams.</description>

  <dependencies>
    <dependency>
      <groupId>org.eclipse.emf</groupId>
      <artifactId>common</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.emf</groupId>
      <artifactId>ecore</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-eclipse-plugin</artifactId>
        <configuration>
          <additionalBuildcommands>
            <buildcommand>org.eclipse.pde.ManifestBuilder</buildcommand>
            <buildcommand>org.eclipse.pde.SchemaBuilder</buildcommand>
          </additionalBuildcommands>
          <additionalProjectnatures>
            <projectnature>org.eclipse.pde.PluginNature</projectnature>
          </additionalProjectnatures>
       </configuration>
      </plugin>
    </plugins>
  </build>

  <modules>
    <module>xlink</module>
    <module>ows</module>
    <module>wfs</module>
    <module>wps</module>
    <module>wcs</module>
    <module>wfsv</module>
  </modules>

</project>
