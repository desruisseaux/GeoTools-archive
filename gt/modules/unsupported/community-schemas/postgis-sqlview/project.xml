<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-sql-view-support</name>
  <id>sqlds</id>
  <currentVersion>2.2.x-complex_branch</currentVersion>
  <package>org.geotools</package>
  <shortDescription>DataStore wrapper over SQLDataStores that adds configuration assistance</shortDescription>
  <gumpRepositoryId>geotools</gumpRepositoryId>
  <description>
    DataStore wrapper over SQLDataStores that adds configuration assistance, allowing to declare a set
    of SQL SELECT statements as the source of a DataStore's FeatureType.
  </description>
  <developers>
    <developer>
      <name>Gabriel Roldan</name>
      <id></id>
      <email>groldan@axios.es</email>
      <organization>Axios Engineering</organization>
      <roles>
        <role>Module Maintainer</role>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <artifactId>main</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x-complex_branch</version>
    </dependency>
    <dependency>
      <artifactId>referencing</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x-complex_branch</version>
    </dependency>
    <!--dependency>
      <id>geoapi</id>
      <version>2.0-without-feature</version>
      </dependency-->
