    </dependency>
    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
      <type>test</type>
      <url>http://junit.org/</url>
    </dependency>
    <dependency>
      <id>mockrunner</id>
      <version>0.2</version>
      <type>test</type>
      <url>http://mockrunner.sourceforge.net/</url>
