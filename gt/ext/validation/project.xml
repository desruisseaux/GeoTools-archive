<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-validation</name>
  <id>validation</id>
  <currentVersion>2.0-B6-DEV</currentVersion>
  <versions>
    <version>
      <id>b1</id>
      <name>2.0-B6-DEV</name>
      <tag>GT_2_0_B6</tag>
    </version>
  </versions>
  <package>org.geotools</package>
  <shortDescription>Validation Processor and Framework.</shortDescription>
  <gumpRepositoryId>geotools</gumpRepositoryId>
  <description>
  Validation module (and validator batch tool) for use with geotools2.
  This library has been ported to geotools2 as part of the VWFS project
  sponcered by Geo Innovations.
  </description>
  <developers>
    <developer>
      <name>Jody Garnett</name>
      <id>jive</id>
      <email>jive@users.sourceforge.net</email>
      <organization>Refractions Research</organization>
      <roles>
        <role>Java Developer</role>
        <role>Module Maintainer</role>
      </roles>
    </developer>
    <developer>
      <name>David Zwiers</name>
      <id>dmzwiers</id>
      <email>dzwiers@refractions.net</email>
      <organization>Refractions Research Inc.</organization>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>
    <developer>
      <name>Brent Owens</name>
      <id>sploreg</id>
      <email>sploreg@users.sourceforge.net</email>
      <organization>Refractions Research</organization>
      <roles>
        <role>Java Developer</role>
        <role>Module Maintainer</role>
      </roles>
    </developer>    
  </developers>
  <dependencies>
    <dependency>
      <artifactId>main</artifactId>
      <groupId>gt2</groupId>
      <version>2.0-B6-DEV</version>
    </dependency>
    <dependency>
      <id>JTS</id>
      <version>1.4</version>
      <url>http://www.vividsolutions.com/JTS/jts_frame.htm</url>
    </dependency>
    <dependency>
      <id>vecmath</id>
      <version>1.2.1</version>
      <url>http://java.sun.com/products/java-media/3D/</url>
    </dependency>
    <dependency>
      <artifactId>graph</artifactId>
      <groupId>gt2</groupId>
      <version>2.0-B6-DEV</version>
    </dependency>
    <dependency>
      <artifactId>postgis</artifactId>
      <groupId>gt2</groupId>
      <version>2.0-B6-DEV</version>
    </dependency>
    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
      <type>test</type>
      <url>http://junit.org/</url>
    </dependency>
    <dependency>
      <id>opengis+legacy</id>
      <version>0.1</version>
      <url>http://www.opengis.org</url>
    </dependency>
    <dependency>
      <id>geoapi</id>
      <version>SNAPSHOT</version>
      <url>http://geoapi.sourceforge.net</url>
    </dependency>
    <dependency>
      <id>mockrunner</id>
      <version>0.2</version>
      <type>test</type>
      <url>http://mockrunner.sourceforge.net/</url>
    </dependency>
    <dependency>
      <artifactId>shapefile</artifactId>
      <groupId>gt2</groupId>
      <version>2.0-B6-DEV</version>
    </dependency>

  </dependencies>
  <build>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
        <exclude>**/GazetteerNameValidationTest.java</exclude>
        <exclude>**/MemoryLeakTest.java</exclude>
      </excludes> 
      <resources>
        <resource>
          <directory>${basedir}/test</directory>
          <includes>
            <include>**/test-data/</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
