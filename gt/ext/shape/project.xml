<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-indexed-shapefile</name>
  <id>indexed-shapefile</id>
  <currentVersion>2.1.x</currentVersion>
  <shortDescription>indexed shapefile module</shortDescription>
  <description>indexed shapefile module</description>
  <developers>
    <developer>
      <name>Tommaso Nolli</name>
      <id>tnolli</id>
      <email>tommaso.nolli@asimantova.it</email>
      <organization>Azienda Servizi Informativi S.p.a</organization>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>
    <developer>
      <name>Jesse Eichar</name>
      <id>jeichar</id>
      <email>jeichar@refractions.net</email>
      <organization>Refraction Research Inc.</organization>
      <roles>
	  <role>Module Maintainer</role>
	  <role>Java Developer</role>
      </roles>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <artifactId>main</artifactId>
      <groupId>gt2</groupId>
      <version>2.1.x</version>
    </dependency>
    <dependency>
      <id>JTS</id>
      <version>1.6-SNAPSHOT</version>
      <url>http://www.vividsolutions.com/JTS/jts_frame.htm</url>
      <properties>
        <release.bundle>true</release.bundle>
      </properties>
    </dependency>
    <dependency>
      <id>opengis+legacy</id>
      <version>0.1</version>
      <url>http://www.opengis.org</url>
    </dependency>
    
    <dependency>
      <id>vecmath</id>
      <version>1.3</version>
      <properties>
        <release.bundle>true</release.bundle>
      </properties>
      <url>http://java.sun.com/products/java-media/3D/</url>
    </dependency>
  </dependencies>

 <build>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${basedir}/test</directory>
          <includes>
            <include>META-INF/</include>
            <include>**/test-data/</include>
            <include>**/data.zip</include>
            <include>**/*.wkt</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
