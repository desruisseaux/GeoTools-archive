<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-shapefile-renderer</name>
  <id>shapefile-renderer</id>
  <currentVersion>2.2.x</currentVersion>
  <shortDescription>renderer optimized for shapefiles</shortDescription>
  <description>renderer optimized for shapefiles</description>
  <developers>
    <developer>
      <name>Jesse Eichar</name>
      <id>jeichar</id>
      <email>jeichar@refractions.net</email>
      <organization>Refraction Research Inc.</organization>
      <roles>
	  <role>Module Maintainer</role>
	  <role>Java Developer</role>
      </roles>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <artifactId>api</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x</version>
    </dependency>  
    <dependency>
      <artifactId>main</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x</version>
    </dependency>
    <dependency>
      <artifactId>render</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x</version>
    </dependency>
    <dependency>
      <artifactId>referencing</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x</version>
    </dependency>
    <dependency>
      <artifactId>indexed-shapefile</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x</version>
    </dependency>
    <dependency>
      <artifactId>shapefile</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x</version>
    </dependency>
    <dependency>
      <id>JTS</id>
      <version>1.6</version>
      <url>http://www.vividsolutions.com/JTS/jts_frame.htm</url>
      <properties>
        <release.bundle>true</release.bundle>
      </properties>
    </dependency>
    <dependency>
      <id>opengis+legacy</id>
      <version>0.2</version>
      <url>http://www.opengis.org</url>
    </dependency>    
    <dependency>
      <id>units</id>
      <version>0.01</version>
      <url>http://jsr-108.sourceforge.net</url>
    </dependency>
    <dependency>
      <id>vecmath</id>
      <version>1.3</version>
      <properties>
        <release.bundle>true</release.bundle>
      </properties>
      <url>http://java.sun.com/products/java-media/3D/</url>
    </dependency>
  </dependencies>

 <build>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${basedir}/test</directory>
          <includes>
            <include>META-INF/</include>
            <include>**/test-data/</include>
            <include>**/data.zip</include>
            <include>**/*.wkt</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
