  <build>
    <resources> 
      <excludes>
        <exclude>**/org/geotools/referencing/operation/transform/MathTransformTest.java</exclude>
      </excludes>
    </resources>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
        <exclude>**/org/geotools/ct/SerializationTest.java</exclude>
        <exclude>**/org/geotools/ct/ScriptTest.java</exclude>
        <exclude>**/org/geotools/referencing/operation/ScriptTest.java</exclude>
        <exclude>**/org/geotools/referencing/operation/transform/MathTransformTest.java</exclude>
      </excludes>     
      <resources>
        <resource>
          <directory>${basedir}/test</directory>
          <includes>
            <include>META-INF/</include>
            <include>**/test-data/</include>
            <include>**/*.xml</include>
            <include>**/*.wkt</include>
            <include>**/*.txt</include>
            <include>**/*.xsd</include>
            <include>**/*.csv</include>
            <include>**/*.png</include>
            <include>**/*.gml</include>
            <include>**/*.sld</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
