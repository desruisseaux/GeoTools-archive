  <!-- ==================================================== -->
  <!--     Compilation (including non-standard plugins)     -->
  <!-- ==================================================== -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.geotools</groupId>
        <artifactId>jjtree-javacc</artifactId>
        <version>2.2.x</version>
        <configuration>
          <sourceDirectory>src</sourceDirectory>       <!-- Where to search for .jjt files -->
          <nodeDirectory>modified-src</nodeDirectory>  <!-- Where to search for Node.java  -->
          <nodePackage>org.geotools.filter.parser</nodePackage>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

