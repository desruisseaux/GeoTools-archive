  <!-- ==================================================== -->
  <!--     Compilation (including non-standard plugins)     -->
  <!-- ==================================================== -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.geotools</groupId>
        <artifactId>gt2-jjtree-javacc</artifactId>
        <version>2.2-SNAPSHOT</version>
        <configuration>
          <sourceDirectory>${basedir}/src</sourceDirectory>       <!-- Where to search for .jjt files -->
          <nodeDirectory>${basedir}/modified-src</nodeDirectory>  <!-- Where to search for Node.java  -->
          <nodePackage>org.geotools.filter.parser</nodePackage>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <!-- TEMPORARY HACK: Disables JUnit tests for now, until the following get fixed:
           http://jira.codehaus.org/browse/MNG-441   (targeted to Maven 2.0-beta 4) -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <skip>true</skip>  <!-- Set this to 'true' to bypass unit tests entirely. -->
        </configuration>
      </plugin>
    </plugins>
  </build>

