<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-migrate</name>
  <id>migrate</id>
  <currentVersion>2.1.x</currentVersion>
  <shortDescription>Geotools</shortDescription>
  <description>This module contains code which depends on legacy methods or classes.  
  It is code which should find its way back into the main module once the dependancy on depricated code has been resolved.
  </description>
  <url>http://www.geotools.org/</url>
  <developers>
    <developer>
      <name>James Macgill</name>
      <id>jmacgill</id>
      <email>jmacgill@users.sourceforge.net</email>
      <organization>GeoVISTA Center</organization>
      <roles>
        <role>Module Maintainer</role>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>
  <dependencies>
     <dependency>
      <id>main</id>
      <groupId>gt2</groupId>
      <version>2.1.x</version>
    </dependency>
    <dependency>
      <id>legacy</id>
      <groupId>gt2</groupId>
      <version>2.1.x</version>
    </dependency>
    <dependency>
      <id>JTS</id>
      <version>1.6-SNAPSHOT</version>
      <properties>
        <release.bundle>true</release.bundle>
       </properties>   
      <url>http://www.vividsolutions.com/JTS/jts_frame.htm</url>
    </dependency>
    <dependency>
      <id>opengis+legacy</id>
      <version>0.1</version>
      <url>http://www.opengis.org</url>
    </dependency>
    
    <dependency>
      <id>units</id>
      <version>0.01</version>
      <url>http://jsr-108.sourceforge.net</url>
    </dependency>
    <dependency>
      <id>vecmath</id>
      <version>1.3</version>
      <url>http://java.sun.com/products/java-media/3D/</url>
    </dependency>
    <dependency>
      <id>xalan</id>
      <version>2.5.1</version>
    </dependency>
    <dependency>
      <id>mailapi</id>
      <version>1.3</version>
    </dependency>
    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
      <type>test</type>
      <url>http://junit.org/</url>
    </dependency>
    <dependency>
      <id>mockrunner</id>
      <version>0.2</version>
      <type>test</type>
      <url>http://mockrunner.sourceforge.net/</url>
    </dependency>
     <dependency>
      <artifactId>batik</artifactId>
      <groupId>batik</groupId>
      <version>1.5.1</version>
    </dependency>
    <dependency>
      <artifactId>batik-gvt</artifactId>
      <groupId>batik</groupId>
      <version>1.5.1</version>
    </dependency>
    <dependency>
      <artifactId>batik-svg-dom</artifactId>
      <groupId>batik</groupId>
      <version>1.5</version>
    </dependency>
     <dependency>
      <artifactId>batik-rasterizer</artifactId>
      <groupId>batik</groupId>
      <version>1.5.1</version>
    </dependency>
    <dependency>
      <artifactId>batik-dom</artifactId>
      <groupId>batik</groupId>
      <version>1.5.1</version>
    </dependency>
    <dependency>
      <artifactId>batik-bridge</artifactId>
      <groupId>batik</groupId>
      <version>1.5</version>
    </dependency>
    <dependency>
      <artifactId>batik-css</artifactId>
      <groupId>batik</groupId>
      <version>1.5.1</version>
    </dependency>
     <dependency>
      <artifactId>batik-xml</artifactId>
      <groupId>batik</groupId>
      <version>1.5</version>
    </dependency>
    <dependency>
      <artifactId>batik-transcoder</artifactId>
      <groupId>batik</groupId>
      <version>1.5.1</version>
    </dependency>
  </dependencies>
  <build>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
        <exclude>**/*CodeList*</exclude>
        <exclude>**/org/geotools/ct/SerializationTest.java</exclude>
      </excludes>     
      <resources>
        <resource>
          <directory>${basedir}/test</directory>
          <includes>
            <include>META-INF/</include>
            <include>**/test-data/</include>
            <include>**/*.xml</include>
            <include>**/*.wkt</include>
            <include>**/*.txt</include>
            <include>**/*.csv</include>
            <include>**/*.png</include>
            <include>**/*.gml</include>
            <include>**/*.sld</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
