<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-api</name>
  <id>api</id>
  <currentVersion>2.2.x</currentVersion>
  <issueTrackingUrl>http://jira.codehaus.org/secure/BrowseProject.jspa?id=10270</issueTrackingUrl>
  <shortDescription>Geotools</shortDescription>
  <description>The api module contains key geotools interfaces that are used by
  other GeoTools modules (and geotools applications). Where possible we make use
  of standard interfaces from projects such as GeoAPI.
  </description>
  <url>http://www.geotools.org/</url>
  <developers>
    <developer>
      <name>Jody Garnett</name>
      <id>jive</id>
      <email>jgarnett@refractions.net</email>
      <organization>Refractions Research, Inc.</organization>
      <roles>
        <role>Java Developer</role>
        <role>Documentation</role>
	<role>Module Maintainer</role>
      </roles>
    </developer>
  </developers>
  
  <dependencies>
    <dependency>
      <artifactId>referencing</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x</version>
    </dependency>
    <dependency>
      <artifactId>coverage</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x</version>
    </dependency>
    <dependency>
      <id>JTS</id>
      <version>1.6</version>
      <properties>
        <release.bundle>true</release.bundle>
       </properties>
      <url>http://www.vividsolutions.com/JTS/jts_frame.htm</url>
    </dependency>
    <dependency>
      <id>units</id>
      <version>0.01</version>
      <url>http://jsr-108.sourceforge.net</url>
    </dependency>
    <dependency>
      <id>vecmath</id>
      <version>1.3</version>
      <url>http://java.sun.com/products/java-media/3D/</url>
    </dependency>
    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
      <type>test</type>
      <url>http://junit.org/</url>
    </dependency>
  </dependencies>

  <build>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${basedir}/test</directory>
          <includes>
            <include>META-INF/</include>
            <include>**/test-data/</include>
            <include>**/*.xml</include>
            <include>**/*.wkt</include>
            <include>**/*.txt</include>
            <include>**/*.xsd</include>
            <include>**/*.csv</include>
            <include>**/*.png</include>
            <include>**/*.gml</include>
            <include>**/*.sld</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
