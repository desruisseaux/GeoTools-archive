<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-mapviewer</name>
  <id>mapviewer</id>
  <currentVersion>SNAPSHOT</currentVersion>
  <package>org.geotools</package>
  <shortDescription>gui demo</shortDescription>
  <description>simple map viewer</description>
  <developers>
    
  </developers>
  <dependencies>
    <dependency>
      <artifactId>main</artifactId>
      <groupId>gt2</groupId>
      <version>2.1.x</version>
    </dependency>
    <dependency>
      <id>units</id>
      <version>0.01</version>
      <url>http://jsr-108.sourceforge.net</url>
    </dependency>

    <dependency>
      <id>opengis+legacy</id>
      <version>0.1</version>
      <url>http://www.opengis.org</url>
    </dependency>
    
    <dependency>
      <artifactId>arcgrid</artifactId>
      <groupId>gt2</groupId>
      <version>2.1.x</version>
    </dependency>
    <dependency>
      <artifactId>shapefile</artifactId>
      <groupId>gt2</groupId>
      <version>2.1.x</version>
    </dependency>
    <dependency>
      <artifactId>legend</artifactId>
      <groupId>gt2</groupId>
      <version>2.1.x</version>
    </dependency>
<!--
    <dependency>
      <artifactId>gcs-coverage</artifactId>
      <groupId>gt2</groupId>
      <version>2.0-B6-DEV</version>
    </dependency>
-->
    <dependency>
      <artifactId>sample-data</artifactId>
      <groupId>gt2</groupId>
      <version>2.1.x</version>
    </dependency>    
    <dependency>
      <id>JTS</id>
      <version>1.6</version>
      <url>http://www.vividsolutions.com/JTS/jts_frame.htm</url>
    </dependency>
  </dependencies>
  <build>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <!-- This section excludes the tests, comment out if your
                 testData/testparams.properties are set correctly -->
    
      <!-- End exclude tests -->
      <resources>
        <resource>
          <directory>${basedir}/test</directory>
          <includes>
            <include>**/*.properties</include>
            <include>**/*.wkt</include>
            <include>**/*.xml</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
