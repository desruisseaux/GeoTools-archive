<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-mysql</name>
  <id>mysql</id>
  <currentVersion>2.2.x</currentVersion>
  <package>org.geotools</package>
  <shortDescription>MySQL DataStore
  Implementation</shortDescription>
  <gumpRepositoryId>geotools</gumpRepositoryId>
  <description>The MySQL module contains an implementation of the
  DataStore interface (found in data), as well as the older DataSource
  interface (found in core), for use with
  MySQL.</description>
  <developers>
    <developer>
      <name>Chris Holmes</name>
      <id>cholmesny</id>
      <email>cholmesny@users.sourceforge.net</email>
      <organization>TOPP</organization>
      <roles>
        <role>Module Maintainer</role>
        <role>Java Developer</role>
      </roles>
    </developer>
    <developer>
      <name>James Macgill</name>
      <id>jmacgill</id>
      <email>jmacgill@users.sourceforge.net</email>
      <organization>CCG</organization>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>
    <developer>
        <name>Gary Sheppard</name>
        <id>shepshep</id>
        <email>garysheppard@psu.edu</email>
        <organization>Penn State GeoVISTA Center</organization>
        <roles>
        <role>Module Maintainer</role>
            <role>Java Developer</role>
        </roles>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <id>JTS</id>
      <version>1.6</version>
      <url>http://www.vividsolutions.com/JTS/jts_frame.htm</url>
    </dependency>
    <dependency>
        <artifactId>mysql-connector-java</artifactId>
        <groupId>mysql</groupId>
        <version>3.0.9</version>
    </dependency>
    <dependency>
      <artifactId>api</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x</version>
    </dependency>    
    <dependency>
      <artifactId>main</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x</version>
    </dependency>
    <dependency>
      <artifactId>referencing</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x</version>
    </dependency>
  </dependencies>
  <build>
  <unitTest>
    <!-- This section excludes the tests -->
    <excludes>
      <exclude>**/mysql/*.java</exclude>
    </excludes>
    <!-- End exclude tests -->
     <resources>
        <resource>
            <directory>${basedir}/test</directory>
            <includes>
                <include>**/*.properties</include>
                <include>**/*.txt</include>
            </includes>
        </resource>
    </resources>
  </unitTest>
  </build>
</project>
