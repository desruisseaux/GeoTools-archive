<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-geotiff</name>
  <id>geotiff</id>
  <currentVersion>2.1.x</currentVersion>
  <versions>
    <version>
      <id>alpha1</id>
      <name>2.1.x</name>
    </version>
  </versions>
  <package>org.geotools</package>
  <shortDescription>GeoTIFF grid coverage exchange module</shortDescription>
  <description>Datasource created to read GeoTIFF raster format. </description>
  <developers>
    <developer>
      <name>Bryce Nordgren</name>
      <id>bnordgren</id>
      <email>bnordgren@fs.fed.us</email>
      <organization>USDA Forest Service</organization>
      <roles>
        <role>Module Maintainer</role>
        <role>Java Developer</role>
      </roles>
    </developer>
    <developer>
      <name>Mike Gelbin</name>
      <id>mgelbin</id>
      <email>schmeldog@gelbin.org</email>
      <organization>Unknown</organization>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <id>vecmath</id>
      <version>1.3</version>
      <url>http://java.sun.com/products/java-media/3D/</url>
    </dependency>
    <dependency>
      <artifactId>main</artifactId>
      <groupId>gt2</groupId>
      <version>2.1.x</version>
    </dependency>
    <dependency>
      <artifactId>geoapi</artifactId>
      <groupId>geoapi</groupId>
      <version>SNAPSHOT</version>
    </dependency>
    <dependency>
      <id>units</id>
      <url>http://jsr-108.sourceforge.net</url>
      <version>0.01</version>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>${basedir}/src</sourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
        <exclude>**/org/geotools/gce/geotiff/GeoTiffReaderTest.java</exclude>
      </excludes>
      <resources>
        <resource>
          <directory>${basedir}/test</directory>
          <includes>
            <include>**/*.png</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
