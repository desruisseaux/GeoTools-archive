<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.geotools</groupId>
    <artifactId>gt2</artifactId>
    <version>2.2.x</version>
  </parent>


  <!-- ==================================================== -->
  <!--     Module description                               -->
  <!-- ==================================================== -->
  <groupId>org.geotools</groupId>
  <artifactId>geotiff</artifactId>
  <packaging>jar</packaging>
  <name>GeoTIFF grid coverage exchange module</name>
  <url>http://modules.geotools.org/geometryless</url>
  <description>
    Datasource created to read GeoTIFF raster format.
  </description>



  <!-- ==================================================== -->
  <!--     Developers and contributors                      -->
  <!-- ==================================================== -->
  <developers>
    <developer>
      <name>Bryce Nordgren</name>
      <id>bnordgren</id>
      <email>bnordgren@fs.fed.us</email>
      <organization>USDA Forest Service</organization>
      <roles>
        <role>Module Maintainer</role>
        <role>Java Developer</role>
      </roles>
    </developer>
    <developer>
      <name>Alessio Fabiani</name>
      <id>alfa</id>
      <email>alessio.fabiani@gmail.com</email>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>
    <developer>
      <name>Mike Gelbin</name>
      <id>mgelbin</id>
      <email>schmeldog@gelbin.org</email>
      <organization>Unknown</organization>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>



  <!-- ==================================================== -->
  <!--     Dependencies                                     -->
  <!-- ==================================================== -->
  <dependencies>
    <dependency>
      <groupId>org.geotools</groupId>
      <artifactId>referencing</artifactId>
      <version>2.2.x</version>
    </dependency>
    <dependency>
      <groupId>org.geotools</groupId>
      <artifactId>main</artifactId>
      <version>2.2.x</version>
    </dependency>
    <dependency>
      <groupId>org.geotools</groupId>
      <artifactId>epsg-wkt</artifactId>
      <version>2.2.x</version>
    </dependency>
    <dependency>
      <groupId>geotiff</groupId>
      <artifactId>beam</artifactId>
      <version>1.0</version>
    </dependency>    
    <dependency>
      <groupId>jai</groupId>
      <artifactId>jai_imageio</artifactId>
      <version>1.0</version>
      <scope>provided</scope>    <!-- Should be part of a JAI installation -->
    </dependency>    
  </dependencies>



  <!-- ==================================================== -->
  <!--     Plugins configuration                            -->
  <!-- ==================================================== -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <skip>true</skip>  <!-- Set this to 'true' to bypass unit tests entirely. -->
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
