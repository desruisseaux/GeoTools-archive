<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-wfs</name>
  <id>wfs</id>
  <currentVersion>2.1.x</currentVersion>
  <package>org.geotools</package>
  <shortDescription>wfs client module</shortDescription>
  <gumpRepositoryId>geotools</gumpRepositoryId>
  <description>wfs client module</description>
  <mailingLists />
  <developers>
    <developer>
      <name>David Zwiers</name>
      <id>dzwiers</id>
      <email>dzwiers@refractions.net</email>
      <organization>Refractions Research</organization>
      <roles>  
	<role>Module Maintainer</role>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <artifactId>main</artifactId>
      <groupId>gt2</groupId>
      <version>2.1.x</version>
    </dependency>
    <dependency>
      <id>JTS</id>
      <version>1.6</version>
      <url>http://www.vividsolutions.com/JTS/jts_frame.htm</url>
      <properties>
        <release.bundle>true</release.bundle>
      </properties>
    </dependency>
    <dependency>
      <id>wms</id>
      <version>2.1.x</version>
      <groupId>gt2</groupId>
    </dependency>
    <dependency>
      <id>epsg-wkt</id>
      <version>2.1.x</version>
      <groupId>gt2</groupId>
    </dependency>
    <dependency>
      <id>units</id>
      <version>0.01</version>
      <url>http://jsr-108.sourceforge.net</url>
    </dependency>
    <dependency>
      <id>vecmath</id>
      <version>1.3</version>
      <url>http://java.sun.com/products/java-media/3D/</url>
    </dependency>
    <dependency>
      <id>opengis+legacy</id>
      <version>0.1</version>
      <url>http://www.opengis.org</url>
    </dependency>
    
  </dependencies>
  <build>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
          <exclude>**/WFSDataStoreWriteTest.java</exclude>
          <exclude>**/CubewerksTest.java</exclude>
      </excludes>
      <resources>
        <resource>
          <directory>${basedir}/test</directory>
          <includes>
            <include>META-INF/</include>
            <include>**/test-data/</include>
            <include>**/*.properties</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
