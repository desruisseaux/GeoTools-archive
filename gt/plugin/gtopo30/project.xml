<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-gtopo30</name>
  <id>gtopo30</id>
  <currentVersion>2.1.x</currentVersion>
  <versions>
    <version>
      <id>b1</id>
      <name>2.1.x</name>
      <tag>GT_2_0_B6_DEV</tag>
    </version>
  </versions>
  <package>org.geotools</package>
  <shortDescription>GTopo30 datasource module</shortDescription>
  <description>This datasource reads the GTOPO30 DEM
  format.</description>
  <developers>
    <developer>
      <name>Andrea Aime</name>
      <id>iant</id>
      <email>aaime@users.sourceforge.net</email>
      <organization>University of Modena and Reggio Emilia</organization>
      <roles>
        <role>Module Maintainer</role>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <artifactId>main</artifactId>
      <groupId>gt2</groupId>
      <version>2.1.x</version>
    </dependency>
    <dependency>
      <id>JTS</id>
      <version>1.4</version>
      <url>http://www.vividsolutions.com/JTS/jts_frame.htm</url>
    </dependency>
    <dependency>
      <id>vecmath</id>
      <version>1.3</version>
      <url>http://java.sun.com/products/java-media/3D/</url>
    </dependency>
   <dependency>
      <id>opengis+legacy</id>
      <version>0.1</version>
      <url>http://www.opengis.org</url>
    </dependency>
    <dependency>
      <id>geoapi</id>
      <version>SNAPSHOT</version>
      <url>http://geoapi.sourceforge.net</url>
    </dependency>
    <dependency>
      <id>units</id>
      <version>0.01</version>
      <url>http://jsr-108.sourceforge.net</url>
    </dependency>
  </dependencies>
  <build>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${basedir}/test</directory>
          <includes>
            <include>**/*.STX</include>
            <include>**/*.HDR</include>
            <include>**/*.SCH</include>
            <include>**/*.dem</include>
            <include>**/*.stx</include>
            <include>**/*.hdr</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
