  <build>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <!-- This section excludes the tests, comment out if your
                 testData/testparams.properties are set correctly -->
      <excludes>
        <exclude>**/ArcSDEJavaApiTest.java</exclude>
        <exclude>**/ArcSDEDataStoreTest.java</exclude>
        <exclude>**/ArcSDEConnectionPoolTest.java</exclude>
        <exclude>**/ArcSDEFeatureStoreTest.java</exclude>
        <exclude>**/ArcSDEQueryTest.java</exclude>
        <exclude>**/FilterTest.java</exclude>
      </excludes>
      <!-- End exclude tests -->
      <resources>
        <resource>
          <directory>${basedir}/test</directory>
          <includes>
            <include>**/*.properties</include>
            <include>**/*.wkt</include>
            <include>**/*.xml</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
