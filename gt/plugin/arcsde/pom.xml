  <!-- ==================================================== -->
  <!--     Dependencies                                     -->
  <!-- ==================================================== -->
  <dependencies>
    <dependency>
      <groupId>org.geotools</groupId>
      <artifactId>main</artifactId>
      <version>2.2.x</version>
    </dependency>
    <dependency>
      <groupId>arcsde</groupId>
      <artifactId>jsde_sdk</artifactId>
      <version>9.0</version>
    </dependency>
    <dependency>
      <groupId>arcsde</groupId>
      <artifactId>jsde_concurrent</artifactId>
      <version>9.0</version>
    </dependency>
    <dependency>
      <groupId>arcsde</groupId>
      <artifactId>jsde_jpe_sdk</artifactId>
      <version>9.0</version>
    </dependency>
  </dependencies>



  <!-- ==================================================== -->
  <!--     Plugins configuration                            -->
  <!-- ==================================================== -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <!-- This section excludes the tests, comment out if your
               testData/testparams.properties are set correctly -->
          <excludes>
            <exclude implementation="java.lang.String">**/ArcSDEJavaApiTest.java</exclude>
            <exclude implementation="java.lang.String">**/ArcSDEDataStoreTest.java</exclude>
            <exclude implementation="java.lang.String">**/ArcSDEConnectionPoolTest.java</exclude>
            <exclude implementation="java.lang.String">**/ArcSDEFeatureStoreTest.java</exclude>
            <exclude implementation="java.lang.String">**/ArcSDEQueryTest.java</exclude>
            <exclude implementation="java.lang.String">**/FilterTest.java</exclude>
          </excludes>
          <!-- End exclude tests -->
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
