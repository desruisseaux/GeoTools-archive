    <!-- The Oracle Plugin                                         -->
    <!--                                                           -->
    <!-- This plugin is set by default to use a fake driver since  -->
    <!-- the real driver is both proprietary and closed. If you    -->
    <!-- have access to the real driver you can rebuild this       -->
    <!-- geotools plugin with that driver to get a working plugin. -->
    <!--                                                           -->
    <!-- To use for real:                                          -->
    <!--   download the ojdbc14.jar driver from oracle             -->
    <!--   copy ojdbc14.jar to                                     -->
    <!--      ~/.m2/repository/oracle/jars/ojdbc/14/ojdbc-14.jar   -->
    <!--   exchange the comments below                             -->
    <!--   rebuild the plugin                                      -->
    <!--                                                           -->
    <!--   During that build, the test cases will try and connect  -->
    <!--   to an oracle server on localhost; alternatively, an     -->
    <!--   alternative server can be indicated in a XXX.properties -->
    <!--   file.                                                   -->
    <!--                                                           -->
    <!-- By default, the build downloads and uses a fake jar full  -->
    <!-- of "Mock Objects" so you we can compile the plugin even   -->
    <!-- without downloading the real thing from oracle.           -->
    <!--
    <dependency>
          <artifactId>ojdbc</artifactId>
          <groupId>oracle</groupId>
          <version>14</version>
    </dependency>
    -->
    <dependency>
      <groupId>com.oracle</groupId>
      <artifactId>dummy_spatial</artifactId>
      <version>8.1.8</version>
        <!-- A real Oracle Spatial JAR must be on the user machine. -->
      <scope>provided</scope>
    </dependency>
  </dependencies>


