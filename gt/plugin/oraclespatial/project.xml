<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-oraclespatial</name>
  <id>oracle-spatial</id>
  <currentVersion>2.2.x</currentVersion>
  <package>org.geotools</package>
  <shortDescription>Oracle Spatial Module</shortDescription>
  <description>Oracle Spatial Module</description>
  <developers>
    <developer>
      <name>Sean Geoghegan</name>
      <id>seangeo</id>
      <email>sean.geoghegan@dsto.defence.gov.au</email>
      <organization>Defence Science and Technology
      Organisation</organization>
      <roles>
        <role>Module Maintainer</role>
        <role>Java Developer</role>
      </roles>
    </developer>
    <developer>
      <name>Simon Rass</name>
      <roles>
        <role>Bug Fixer</role>
      </roles>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <artifactId>main</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x</version>
    </dependency>
    <dependency>
      <artifactId>referencing</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x</version>
    </dependency>
    <dependency>
      <id>JTS</id>
      <version>1.6</version>
      <url>http://www.vividsolutions.com/JTS/jts_frame.htm</url>
    </dependency>
    <!-- To use for real - download the ojdbc14.jar from oracle:
          copy ojdbc14.jar to ~/.maven/repository/oracle/jars/ojdbc-14.jar

         The test cases will try and connect to an oracle server on localhost;
         or on the server indicated by a XXXX.properties file.
      -->
	<!--dependency>
          <artifactId>ojdbc</artifactId>
          <groupId>oracle</groupId>
          <version>14</version>
        </dependency-->
    <!-- To use for fake:
         Uncomment the following section, it downloads a jar full of
         "Mock Objects" so you can compile without downloading the real
         thing from oracle.
     -->
    <dependency>
      <artifactId>dummy_spatial</artifactId>
      <groupId>oracle</groupId>
      <version>8.1.8</version>
    </dependency>
    <!-- end of optional dependencies -->
    <dependency>
      <id>opengis+legacy</id>
      <version>0.2</version>
      <url>http://www.opengis.org</url>
    </dependency>
    <dependency>
      <id>vecmath</id>
      <version>1.3</version>
      <url>http://java.sun.com/products/java-media/3D/</url>
    </dependency> 
  </dependencies>
  <build>
    <unitTest>
      <includes>
         <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${basedir}/test</directory>
          <includes>
            <include>testData/</include>
            <include>**/*.properties/</include>
            <include>**/test-date/</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
