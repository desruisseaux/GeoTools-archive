  <build>
  <unitTest>
    <!-- This section excludes the tests -->
    <excludes>
      <exclude>**/*.java</exclude>
            <exclude>**/L*.java</exclude>
       <exclude>**/JDBCTestSuite.java</exclude>
       <exclude>**/JDBCDataStoreAPITest.java</exclude>
        <exclude>**/ServiceTest.java</exclude>
   
    </excludes>
    <!-- End exclude tests -->
     <resources>
        <resource>
            <directory>${basedir}/test</directory>
            <includes>
                <include>**/*.properties</include>
                <include>**/*.txt</include>
            </includes>
        </resource>
    </resources>
  </unitTest>
  </build>
</project>
