<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-postgis</name>
  <id>postgis</id>
  <currentVersion>2.2.x</currentVersion>
  <package>org.geotools</package>
  <shortDescription>postgis module</shortDescription>
  <description>Used extract and edit features from a PostGIS 
database.  PostGIS was developed by Refractions Research, it 
is an extension to the excellent Postgresql database, adding 
support for Geographic objects.  It is open source and 
freely available.</description>
  <developers>
    <developer>
      <name>Rob Hranac</name>
      <id>robhranac</id>
      <email>robhranac@users.sourceforge.net</email>
      <organization>VFNY</organization>
      <roles>
        <role>Module Maintainer</role>
        <role>Java Developer</role>
      </roles>
    </developer>
    <developer>
      <name>Chris Holmes</name>
      <id>cholmesny</id>
      <email>cholmesny@users.sourceforge.net</email>
      <organization>TOPP</organization>
      <roles>
        <role>Module Maintainer</role>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <artifactId>main</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x</version>
    </dependency>
    <dependency>
      <artifactId>referencing</artifactId>
      <groupId>gt2</groupId>
      <version>2.2.x</version>
    </dependency>
    <dependency>
      <id>postgis-driver</id>
      <version>1.0</version>
      <url>http://postgis.refractions.net/download.php</url>
      <properties>
        <relese.bundle>true</relese.bundle>
      </properties>
    </dependency>
    <dependency>
      <id>postgresql</id>
      <version>74.213</version>
      <url>http://jdbc.postgresql.org</url>
       <properties>
        <relese.bundle>true</relese.bundle>
      </properties>
    </dependency>
    <dependency>
      <id>wkb4j</id>
      <version>1.0-RC1</version>
      <url>http://wkb4j.sf.net/</url>
       <properties>
        <relese.bundle>true</relese.bundle>
      </properties>
    </dependency>
    <dependency>
      <id>log4j</id>
      <version>1.2.8</version>
      <url>http://logging.apache.org/log4j/docs/</url>
       <properties>
        <relese.bundle>true</relese.bundle>
      </properties>
    </dependency>
    <dependency>
      <id>JTS</id>
      <version>1.6</version>
      <url>http://www.vividsolutions.com/JTS/jts_frame.htm</url>
       <properties>
        <relese.bundle>true</relese.bundle>
      </properties>
    </dependency>
    
    <dependency>
      <id>opengis+legacy</id>
      <version>0.2</version>
      <url>http://www.opengis.org</url>
    </dependency>
    <dependency>
      <id>vecmath</id>
      <version>1.3</version>
      <url>http://java.sun.com/products/java-media/3D/</url>
       <properties>
        <relese.bundle>true</relese.bundle>
      </properties>
    </dependency>

    <dependency>
      <id>units</id>
      <version>0.01</version>
    </dependency>

  </dependencies>

  <build>
    <unitTest>
       <resources>
          <resource>
              <directory>${basedir}/test</directory>
              <includes>
                  <include>**/*.properties</include>
              </includes>
          </resource>
      </resources>
    </unitTest>
  </build>
</project>
