<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-hsql</name>
  <id>hsql</id>
  <currentVersion>2.3.x</currentVersion>
  <package>org.geotools</package>
  <shortDescription>hsql module</shortDescription>
  <description>HSQL is a lightweight (~600k) JAVA database that
  is usefull for saving data locally. This module also uses
  the Spatial DB in a Box extensions written by David Blasby.
  </description>
  <developers>
    <developer>
      <name>Amr Alam</name>
      <id>aalam</id>
      <email>aalam@refractions.net</email>
      <organization>Refractions Research</organization>
      <roles>
        <role>Module Maintainer</role>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <artifactId>main</artifactId>
      <groupId>gt2</groupId>
      <version>2.3.x</version>
			<properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>
    <dependency>
      <artifactId>api</artifactId>
      <groupId>gt2</groupId>
      <version>2.3.x</version>
    </dependency>
    <dependency>
      <artifactId>referencing</artifactId>
      <groupId>gt2</groupId>
      <version>2.3.x</version>
			<properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>
    <dependency>
      <id>hsqldb</id>
      <version>1.8.0.1</version>
      <url>http://hsqldb.org/</url>
      <properties>
        <relese.bundle>true</relese.bundle>
      </properties>
    </dependency>
    <dependency>
      <id>spatialdb</id>
      <version>0.1</version>
      <url>http://docs.codehaus.org/pages/viewpageattachments.action?pageId=19596</url>
      <properties>
        <relese.bundle>true</relese.bundle>
      </properties>
    </dependency>
    <dependency>
      <id>JTS</id>
      <version>1.6</version>
      <url>http://www.vividsolutions.com/JTS/jts_frame.htm</url>
       <properties>
        <relese.bundle>true</relese.bundle>
      </properties>
    </dependency>
    <dependency>
      <artifactId>jsde_concurrent</artifactId>
      <groupId>arcsde</groupId>
      <version>9.0</version>
      <url>http://support.esri.com/index.cfm?fa=downloads.patchesServicePacks.viewPatch&amp;PID=19&amp;MetaID=1065#install-cUNIX</url>
    </dependency>
  </dependencies>
  <build>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </unitTest>
  </build>
</project>
