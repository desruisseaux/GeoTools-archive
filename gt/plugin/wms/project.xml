<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-wms</name>
  <id>wms</id>
  <currentVersion>2.3.x</currentVersion>
  <package>org.geotools</package>
  <shortDescription>
    WebMapServer client that can be used by itself (recommended), or as a 
    GridCoverageExchange.
  </shortDescription>
  <gumpRepositoryId>geotools</gumpRepositoryId>
  <description>
  An OGC Web Map Server client implementation that can be used directly or as 
  through the GridCoverageExchange API. 
  
  Direct usage is recommended, as the GridCoverageExchange access for WMS is not
  well tested and is complicated to use.
  
  It supports WMS versions 1.0.0, 1.1.0, 1.1.1, and 1.3.0.
  </description>
  <developers>
    <developer>
      <name>Richard Gould</name>
      <id>rgould</id>
      <email>rgould@refractions.net</email>
      <organization>Refractions Research</organization>
      <roles>
        <role>Java Developer</role>
        <role>Module Maintainer</role>
        <role>Project Management Committee (PMC) Member</role>
      </roles>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <artifactId>api</artifactId>
      <groupId>gt2</groupId>
      <version>2.3.x</version>
			<properties>
				<eclipse.dependency>true</eclipse.dependency>
			</properties>
    </dependency>  
    <dependency>
      <artifactId>main</artifactId>
      <groupId>gt2</groupId>
      <version>2.3.x</version>
			<properties>
				<eclipse.dependency>true</eclipse.dependency>
			</properties>
    </dependency>
    <dependency>
      <artifactId>referencing</artifactId>
      <groupId>gt2</groupId>
      <version>2.3.x</version>
			<properties>
				<eclipse.dependency>true</eclipse.dependency>
			</properties>
    </dependency>
    <dependency>
      <artifactId>coverage</artifactId>
      <groupId>gt2</groupId>
      <version>2.3.x</version>
			<properties>
				<eclipse.dependency>true</eclipse.dependency>
			</properties>
    </dependency>
    <dependency>
      <id>epsg-wkt</id>
      <version>2.3.x</version>
      <groupId>gt2</groupId>
			<properties>
				<eclipse.dependency>true</eclipse.dependency>
			</properties>
    </dependency>    
    <dependency>
      <id>JTS</id>
      <version>1.6</version>
      <url>http://www.vividsolutions.com/JTS/jts_frame.htm</url>
    </dependency>
    <dependency>
      <id>units</id>
      <version>0.01</version>
      <url>http://jsr-108.sourceforge.net</url>
    </dependency>
    <dependency>
      <id>opengis+legacy</id>
      <version>0.2</version>
      <url>http://www.opengis.org</url>
    </dependency>
    
    <dependency>
      <id>vecmath</id>
      <version>1.3</version>
      <url>http://java.sun.com/products/java-media/3D/</url>
    </dependency>
    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
      <type>test</type>
      <url>http://junit.org/</url>
    </dependency>
    <dependency>
      <id>jdom</id>
      <version>1.0b10</version>
      <url>http://www.jdom.org/</url>
    </dependency> 
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>2.0</version>
      <type>jar</type>
    </dependency>   
  </dependencies>
  <build>
    <unitTest>
  		<excludes>
        <exclude>**/WMS1_3_0_OnlineTest.*</exclude>
      </excludes>
      <resources>
        <resource>
          <directory>${basedir}/test</directory>
          <includes>
            <include>**/test-data/</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
