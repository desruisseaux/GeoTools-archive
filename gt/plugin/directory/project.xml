<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-dir</name>
  <id>dir_ds</id>
  <currentVersion>2.1.x</currentVersion>
  <versions>
    <version>
      <id>b1</id>
      <name>2.1.x</name>
      <tag>GT_2_0_B6_DEV</tag>
    </version>
  </versions>
  <package>org.geotools</package>
  <shortDescription>directory module</shortDescription>
  <description>Used to represent a directory and propagates to the 
  appropriate datastore based on file type.</description>
  <developers>
    <developer>
      <name>David Zwiers</name>
      <id>dzwiers</id>
      <email>dzwiers@refractions.net</email>
      <organization>Refractions Research</organization>
      <roles>
        <role>Module Maintainer</role>
        <role>Java Developer</role>
      </roles>
    </developer>
    <developer>
      <name>Jody Garnet</name>
      <id>jgarnet</id>
      <email>jgarnet@refractions.net</email>
      <organization>Refractions Research</organization>
      <roles>
        <role>Module Maintainer</role>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <artifactId>main</artifactId>
      <groupId>gt2</groupId>
      <version>2.1.x</version>
    </dependency>
    
    <dependency>
      <id>log4j</id>
      <version>1.2.8</version>
      <url>http://logging.apache.org/log4j/docs/</url>
       <properties>
        <relese.bundle>true</relese.bundle>
      </properties>
    </dependency>
  </dependencies>
  <build>
      <unitTest>
      <includes>
        <include>**/*Tests.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${basedir}/test</directory>
          <includes>
            <include>META-INF/</include>
            <include>**/test-data/</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
